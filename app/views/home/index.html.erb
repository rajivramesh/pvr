<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style type="text/css">
  .form-div input[type=text] {
    width: 100%;
    height: 5%;
    border-radius: 7px;
  }
  .form-div input[type=submit]{
    margin: 10px;
    padding: 10px;
    border-radius: 8px;
    background: #ccb3b3;
    color: white;
  }
  .shows-list{
    background-color: #ffd4d4;
    border-radius: 5px;
    padding: 16px;
    margin-right: 10px;
  }
  .tbl-head{
    font-size: 35px;
    font-weight: 600;
  }
</style>
<div class="container" style="margin: 77px 80px 0px 145px;">
  <%= link_to 'sign out',destroy_user_session_path , method: :delete, class: "btn btn-primary"%><br><br>
  <div class="form-div">
    <%= search_form_for @q, url: search_shows_path, method: :get, remote: true do |f|%>
      <%= f.text_field :name_eq,  { class: "form-control" }%>
      <input type="submit" name="submit" value="Search">
    <%end%>
  </div>
  <div class="row channel_index">
    <div class="tbl-head">Channels and shows list</div>
    <%= render 'index' %>
  </div>
</div>